{% extends 'stats/base_stats.html.twig' %}

{% block stats_title %}Rapports Historiques{% endblock %}

{% block stats_content %}
    <div class="card mb-4">
        <div class="card-header">
            Filtres
        </div>
        <div class="card-body">
            <form method="get" action="{{ path('stats_reports') }}">
                <div class="row">
                    <div class="col-md-5">
                        <label for="start" class="form-label">Date de début</label>
                        <input type="date" id="start" name="start" value="{{ filters.start }}" class="form-control">
                    </div>
                    <div class="col-md-5">
                        <label for="end" class="form-label">Date de fin</label>
                        <input type="date" id="end" name="end" value="{{ filters.end }}" class="form-control">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Filtrer</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Historique d'occupation journalier
                </div>
                <div class="card-body">
                    <canvas id="occupancyHistoryChart"></canvas>
                </div>
            </div>
        </div>
    </div>

     <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Pics d'occupation par heure
                </div>
                <div class="card-body">
                    <canvas id="peakUsageChart"></canvas>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // 1. Occupancy History Chart (Line)
            const historyCtx = document.getElementById('occupancyHistoryChart').getContext('2d');
            const occupancyHistory = {{ occupancyHistory|json_encode|raw }};
            const historyLabels = occupancyHistory.map(h => h.date_period);
            const historyData = occupancyHistory.map(h => h.unique_agents);

            new Chart(historyCtx, {
                type: 'line',
                data: {
                    labels: historyLabels,
                    datasets: [{
                        label: 'Nombre d\'agents uniques présents',
                        data: historyData,
                        borderColor: 'rgba(75, 192, 192, 1)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        fill: true,
                        tension: 0.1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Évolution du nombre d\'agents présents sur la période'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // 2. Peak Usage Chart (Bar)
            const peakCtx = document.getElementById('peakUsageChart').getContext('2d');
            const peakUsage = {{ peakUsage|json_encode|raw }};
            // Create a full 24-hour structure
            const hours = Array.from({length: 24}, (_, i) => i.toString().padStart(2, '0'));
            const peakData = Array(24).fill(0);
            peakUsage.forEach(item => {
                peakData[parseInt(item.hour)] = item.agent_count;
            });

            new Chart(peakCtx, {
                type: 'bar',
                data: {
                    labels: hours,
                    datasets: [{
                        label: 'Nombre d\'agents connectés',
                        data: peakData,
                        backgroundColor: 'rgba(153, 102, 255, 0.8)',
                        borderColor: 'rgba(153, 102, 255, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Pics d\'occupation moyens par tranche horaire'
                        }
                    },
                     scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}
