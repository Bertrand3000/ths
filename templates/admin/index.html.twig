{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord - {{ parent() }}{% endblock %}

{% block body %}
    <h1>Tableau de bord</h1>
    <p>Bienvenue dans l'interface d'administration de Téhou.</p>

    <div class="row">
        <div class="col-md-4">
            <div class="card text-center mb-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-building me-2"></i>Sites</h5>
                    <h2 class="text-primary display-4">{{ stats.sites }}</h2>
                    <a href="{{ path('admin_site_index') }}" class="btn btn-primary">Gérer les sites</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center mb-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-layer-group me-2"></i>Étages</h5>
                    <h2 class="text-success display-4">{{ stats.etages }}</h2>
                    <a href="{{ path('admin_etage_index') }}" class="btn btn-success">Gérer les étages</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center mb-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-concierge-bell me-2"></i>Services</h5>
                    <h2 class="text-info display-4">{{ stats.services }}</h2>
                    <a href="{{ path('admin_service_index') }}" class="btn btn-info">Gérer les services</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
